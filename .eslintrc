{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
  ],
  "env": {
    "node": true,
    "es2021": true,
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "tabWidth": 2,
        "useTabs": false,
      },
    ],
  },
}
